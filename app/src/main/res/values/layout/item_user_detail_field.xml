<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/item_user_detail_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/grey_primary_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/item_user_detail_text"
            style="@style/editTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HEADER"
            android:enabled="false"
            android:clickable="false"
            android:focusable="false"
            android:maxLines="1"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            android:textDirection="locale"
            android:textAlignment="viewStart"
            android:textColor="@color/grey_secondary_text"
            tools:text="Description of the field" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>