<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:referencedswiperefreshlayout="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_list_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.projects.rodrixan.randomusers.common.view.recyclerview.ReferencedSwipeRefreshLayout
        android:id="@+id/users_list_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        referencedswiperefreshlayout:layout_constraintBottom_toTopOf="@+id/users_list_add_more_button"
        referencedswiperefreshlayout:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/users_list_empty_view"
                layout="@layout/empty_error_data_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                referencedswiperefreshlayout:layout_constraintLeft_toLeftOf="parent"
                referencedswiperefreshlayout:layout_constraintRight_toRightOf="parent"
                referencedswiperefreshlayout:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/users_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                referencedswiperefreshlayout:layout_constraintLeft_toLeftOf="parent"
                referencedswiperefreshlayout:layout_constraintRight_toRightOf="parent"
                referencedswiperefreshlayout:layout_constraintTop_toBottomOf="@+id/users_list_empty_view" />

        </FrameLayout>
    </com.projects.rodrixan.randomusers.common.view.recyclerview.ReferencedSwipeRefreshLayout>

    <Button
        android:id="@+id/users_list_add_more_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/grey_primary_dark"
        android:text="@string/user_list_add_more_button_text"
        android:textColor="@color/grey_primary_light"
        referencedswiperefreshlayout:layout_constraintBottom_toBottomOf="parent"
        referencedswiperefreshlayout:layout_constraintEnd_toEndOf="parent"
        referencedswiperefreshlayout:layout_constraintStart_toStartOf="parent"
        referencedswiperefreshlayout:layout_constraintTop_toBottomOf="@+id/users_list_swipe_layout" />
</android.support.constraint.ConstraintLayout>